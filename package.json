{
  "name": "moex-donchian-levels",
  "version": "2.0.0",
  "description": "Trading bot for MOEX with Donchian levels and Telegram integration",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "bot": "node dist/bot/main.js",
    "dev": "npm run build && npm run bot",
    "orders": "npm run build && node dist/orders/getOrders.js",
    "history": "npm run build && node dist/history.js",
    "history:incremental": "npm run build && node dist/historyIncremental.js",
    "history:levels": "npm run build && node dist/historyLevels.js",
    "donchian": "npm run build && node dist/donchian.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop moex-bot",
    "pm2:restart": "pm2 restart moex-bot",
    "pm2:logs": "pm2 logs moex-bot",
    "pm2:monit": "pm2 monit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "trading",
    "moex",
    "telegram-bot",
    "donchian",
    "alor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "axios": "^1.6.7",
    "cron": "^4.4.0",
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.67.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  }
}
